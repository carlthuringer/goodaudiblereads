source 'https://rubygems.org'

gem 'rails'
gem 'pg'
gem 'thin'
gem 'twitter-bootstrap-rails'
gem 'haml-rails'
gem 'lograge'
gem 'google-analytics-rails'
gem 'jquery-rails'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
  gem 'therubyracer'
end

gem 'jquery-rails'

group :development, :test do
  gem 'pry-rails'
  gem 'growl'
  gem 'guard-jasmine'
  gem 'guard-rspec'
  gem 'jasmine'
  gem 'jasminerice'
  gem 'rspec-rails'

  gem 'capybara'
  gem 'database_cleaner'
end

